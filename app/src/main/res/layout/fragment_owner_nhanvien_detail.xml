<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.Owner_NhanVienDetailFragment">

    <!-- Thanh Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="Chi tiết Nhân Viên" />

    <!-- Avatar của Nhân Viên -->
    <ImageView
        android:id="@+id/imgAvatar"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="28dp"
        android:contentDescription="Avatar"
        android:scaleType="centerCrop"
        android:src="@drawable/nav_nhanvien"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <!-- Edittext Tên Nhân Viên (Mặc định: Không Cho Sửa)-->

    <!-- Edittext Chức Vụ (Mặc định: Không Cho Sửa)-->

    <!-- Edittext Số điện thoại (Mặc định: Không Cho Sửa)-->

    <!-- Edittext Email (Mặc định: Không Cho Sửa)-->

    <!-- Edittext Hình Căn Cước Mặt Trước (Mặc định: Không Cho Sửa)-->
    <ImageView
        android:id="@+id/imgCanCuocTruoc"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:contentDescription="Căn cước mặt trước"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_img_detail"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgAvatar" />

    <!-- Hình Căn Cước Mặt Sau -->
    <ImageView
        android:id="@+id/imgCanCuocSau"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_marginTop="8dp"
        android:contentDescription="Căn cước mặt sau"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_img_detail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imgCanCuocTruoc" />

    <!--Nút Chỉnh Sửa (Nằm ở góc cuối bên phải, hình tròn)-->

    <!--Nút Lưu Lại (Nằm giữa cuối cùng màn hình,  Mặc Định: Ẩn)-->

</androidx.constraintlayout.widget.ConstraintLayout>
