<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    app:cardUseCompatPadding="true"
    android:translationZ="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingVertical="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#D7D7D7">
                <ImageView
                    android:id="@+id/iv_anh_don"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:src="@drawable/star"/>
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="10dp">
                <TextView
                    android:id="@+id/tv_ten_nhan_don"
                    android:layout_width="match_parent"
                    android:layout_height="29dp"
                    android:gravity="center_vertical"
                    android:textSize="21dp"
                    android:textStyle="bold"
                    android:text="Tên người nhận"/>
                <TextView
                    android:id="@+id/tv_sdt_don"
                    android:layout_width="match_parent"
                    android:layout_height="23dp"
                    android:gravity="center_vertical"
                    android:textSize="18dp"
                    android:text="0398678436"/>
                <TextView
                    android:id="@+id/tv_dia_chi_don"
                    android:layout_width="match_parent"
                    android:layout_height="23dp"
                    android:gravity="center_vertical"
                    android:textSize="18dp"
                    android:text="Địa chỉ người nhận"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_tong_gia"
                android:layout_marginTop="5dp"
                android:layout_width="200dp"
                android:layout_height="45dp"
                android:paddingLeft="5dp"
                android:text="Tổng tiền: 900000"
                android:gravity="center_vertical"
                android:textSize="18dp"/>
            <TextView
                android:id="@+id/tv_trang_thai_vc"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginVertical="5dp"
                android:layout_marginRight="5dp"
                android:text="Đang Vận Chuyển"
                android:gravity="center"
                android:textSize="16dp"
                android:background="#0FF"/>
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>