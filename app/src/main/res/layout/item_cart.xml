<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_marginTop="-5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="5dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/cb_cart"
                android:layout_width="40dp"
                android:layout_height="match_parent" />

            <LinearLayout
                android:layout_width="310dp"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="8dp">

                    <ImageView
                        android:id="@+id/img_cart"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:background="@drawable/bg_img_detail"
                        android:src="@drawable/tc" />
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_name_cart"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="6dp"
                        android:text="Thép uốn Hòa Phát"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_des_cart"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:paddingHorizontal="6dp"
                        android:text="Thép uốn Hòa Phát chất lượng cao, độ dày 0.5mm"
                        android:textSize="15dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingLeft="5dp">

                        <TextView
                            android:id="@+id/tv_price"
                            android:layout_width="122dp"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:text="100.000"
                            android:textColor="#F00"
                            android:textSize="16dp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@drawable/bg_img_detail"
                            android:gravity="center_vertical">

                            <TextView
                                android:id="@+id/btn_giam"
                                android:layout_width="15dp"
                                android:layout_height="25dp"
                                android:background="#DDD"
                                android:gravity="center"
                                android:text="-"
                                android:textSize="15dp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_sl"
                                android:layout_width="55dp"
                                android:layout_height="25dp"
                                android:background="@drawable/bg_img_detail"
                                android:gravity="center"
                                android:text="10000"
                                android:textSize="16dp" />

                            <TextView
                                android:id="@+id/btn_tang"
                                android:layout_width="15dp"
                                android:layout_height="25dp"
                                android:background="#DDD"
                                android:gravity="center"
                                android:text="+"
                                android:textSize="15dp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/btn_delete_cart"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#F00"
                android:gravity="center"
                android:text="-"
                android:textSize="30dp"
                android:textStyle="bold"
                android:textColor="@color/white"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>