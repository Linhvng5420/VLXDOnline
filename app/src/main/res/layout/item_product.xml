<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardElevation="5dp"
    app:cardCornerRadius="8dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/system_accent2_10">
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:layout_marginTop="5dp"
            app:cardCornerRadius="8dp">
            <ImageView
                android:id="@+id/imgItem"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:src="@drawable/search"/>
        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/tvNameItem"
            android:layout_width="170dp"
            android:layout_height="25dp"
            android:paddingHorizontal="5dp"
            android:gravity="center"
            android:textSize="18dp"
            android:text="Tên Sản Phẩm"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/tv_chua_dg"
            android:layout_width="170dp"
            android:layout_height="25dp"
            android:gravity="center"
            android:text="Chưa Có Đánh Giá"
            android:textColor="#FA0"
            android:textStyle="bold"/>
        <LinearLayout
            android:id="@+id/ln_so_sao"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:gravity="center">
            <ImageView
                android:id="@+id/star_1"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/star_disable"/>
            <ImageView
                android:id="@+id/star_2"
                style="@style/ThemeStar"
                android:src="@drawable/star_disable"/>
            <ImageView
                android:id="@+id/star_3"
                style="@style/ThemeStar"
                android:src="@drawable/star_disable"/>
            <ImageView
                android:id="@+id/star_4"
                style="@style/ThemeStar"
                android:src="@drawable/star_disable"/>
            <ImageView
                android:id="@+id/star_5"
                style="@style/ThemeStar"
                android:src="@drawable/star_disable"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tvPriceItem"
            android:layout_width="170dp"
            android:layout_height="25dp"
            android:paddingHorizontal="5dp"
            android:gravity="center"
            android:textSize="18dp"
            android:textColor="#F00"
            android:text="100.000.000"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/btn_buy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F00"
            android:paddingVertical="2dp"
            android:gravity="center"
            android:text="ĐẶT NGAY"
            android:textColor="#FFF"
            android:textSize="15dp"
            android:textStyle="bold"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>