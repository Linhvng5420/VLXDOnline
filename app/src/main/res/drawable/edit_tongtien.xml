<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <stroke android:width="1dp" android:color="#000000"/> <!-- Màu và độ dày của border -->
    <padding android:left="0dp" android:right="0dp" android:top="0dp" android:bottom="0dp"/>

    <!-- Đường viền trên -->
    <corners android:topLeftRadius="0dp" android:topRightRadius="0dp"/>
    <stroke android:width="1dp" android:color="#000000" android:dashWidth="0dp" android:dashGap="0dp"/>

    <!-- Đường viền dưới -->
    <corners android:bottomLeftRadius="0dp" android:bottomRightRadius="0dp"/>
    <stroke android:width="1dp" android:color="#000000" android:dashWidth="0dp" android:dashGap="0dp"/>
</shape>